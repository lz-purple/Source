AUTHOR = 'bettyzhou, jaineelm, krisr'
NAME = 'android_ACTS.Telephony_MTV_Australia_Telstra_Roaming'
TIME = 'MEDIUM'
TEST_TYPE = 'Server'
ATTRIBUTES = 'suite:android_telephony_international_roaming'
DEPENDENCIES = 'carrier:australia_telstra,location:mtv'

DOC = """
This test runs telephony sanity against phones with Australia Telstra SIMs
roaming in US.
"""

def run(machine):
    job.run_test('android_ACTS',
                 testbed=hosts.create_testbed(machine),
                 config_file='android1758-telephony-australia-telstra-mtv.config',
                 test_file='telephony_international_roaming',
                 additional_configs=['simcard_list.json'],
                 testtracker_project_id=11349,
                 testtracker_owner='android-comms-tvc@google.com',
                 testtracker_extra_env="australia_telstra_mtv",
                 acts_timeout=36000)

parallel_simple(run, machines)
